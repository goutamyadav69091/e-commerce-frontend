<!-- addProduct Modal start  -->
<div class="modal fade" id="addProduct" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Create Product</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/admin/create-product" method="post" enctype="multipart/form-data">
                    <label for="" class="form-label">Title</label>
                    <input type="text" class="form-control" name="title">

                    <label for="" class="form-label">Description</label>
                    <textarea name="description" class="form-control" id="" cols="30" rows="4"></textarea>

                    <label for="" class="form-label">category Id</label>
                    <input type="number" class="form-control" name="categoryId">

                    <label for="" class="form-label">Price</label>
                    <input type="number" class="form-control" name="price">

                    <label for="formFileSm" class="form-label">Product Image</label>
                    <input class="form-control form-control-sm" multiple accept="." id="image" type="file" name="image">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- addProduct Modal end  -->

<!-- edit Product Modal start  -->
<div class="modal fade" id="editProduct" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
        <form action="/admin/update-product" method="post" enctype="multipart/form-data">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit Product</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                    <label for="" class="form-label">Title</label>
                    <input type="text" class="form-control" name="title">
                
                    <label for="" class="form-label">Description</label>
                    <textarea name="description" class="form-control" id="" cols="30" rows="4"></textarea>
                
                    <label for="" class="form-label"> Category Id</label>
                    <input type="number" class="form-control" name="categoryId">

                    <input type="hidden" class="form-control" name="productId" id="productId" />
                
                    <label for="" class="form-label">Price</label>
                    <input type="number" class="form-control" name="price">
                
                    <label for="formFileSm" class="form-label">Product Image</label>
                    <input class="form-control form-control-sm" multiple accept="." id="image" type="file" name="image">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
        </div>
    </div>
</div>
<!-- edit Product Modal end  -->

<div class="card">
    <div class="card-header">
        <h3>All Products List</h3>
        
    </div>
    <% if(status && message){ %>
        <h4 class="text text-danger">
            <%= message; %>
        </h4>
        <% } %>
    <div class="card-body">
        <div class="p-2 bd-highlight" align="right">
            <a href="" class="btn-lg btn-info" data-bs-toggle="modal" data-bs-target="#addProduct">Add
                Product</a>
        </div>
        <br>
        <table id="example2" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th scope="col">S.No.</th>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                    <th scope="col">category Id</th>
                    <th scope="col">Price</th>
                    <th scope="col">Image</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% for(let i=0; i < allProdducts.length; i++){const products=allProdducts[i] %>
                    <tr>
                        <th scope="row">
                            <h5>
                                <%= i + 1; %>
                            </h5>
                        </th>
        
                        <td>
                            <h5>
                                <%= products.title; %>
                            </h5>
                        </td>
                        <td>
                            <h5>
                                <%= products.description; %>
                            </h5>
                        </td>
                        <td>
                            <h5>
                                <%= products.category_id; %>
                            </h5>
                        </td>
                        <td>
                            <h5>
                                <%= products.price; %>
                            </h5>
                        </td>
                        <td>
                            <h5>
                                <img src="<%= products.path; %>" height="50px"  width="50px"/>
                            </h5>
                        </td>
                        <td>
                            <h5>
                                <a href="#" onclick="return editProduct('<%= products.id; %>')" class="btn btn-info">Edit</a>
                                <a href="/admin/delete-product-by-admin/<%- products.id; %>" onclick="return confirm('Are you sure want to delete this product')"
                                    class="btn btn-danger">Delete</a>
                            </h5>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
            <tfoot>
                <tr>
                    <th scope="col">S.No.</th>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                    <th scope="col">category Id</th>
                    <th scope="col">Price</th>
                    <th scope="col">Image</th>
                    <th scope="col">Action</th>
                </tr>
            </tfoot>
        </table>
    </div>

</div>
<script>
    function editProduct(prodId){
        console.log('prodId',prodId);
        $('#productId').val(prodId)
        $("#editProduct").modal('show')     
    }
</script>

