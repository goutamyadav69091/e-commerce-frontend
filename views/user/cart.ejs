<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-0 gx-5 align-items-end">
            <div class="col-lg-12">
                <div class="section-header text-start mb-5 wow fadeInUp" data-wow-delay="0.1s">
                    <h1 class="disply-5 mb-3">Cart Items</h1>
                    <form action="/proceed-to-checkout" method="post">
                        <div class="table">
                            <table class="table table-bordered table-light">
                                <thead>
                                    <tr>
                                        <th>S.No</th>
                                        <th>Image</th>
                                        <th>Title</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th>Total</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% let grandtotal = 0 ; for(let i=0 ; i< cartItems.length; i++){ let product=cartItems[i]; 
                                        grandtotal=grandtotal +product.price; %>

                                        <tr>
                                            <td>
                                                <h5><%= i + 1 %></h5>
                                            </td>
                                            <td>
                                                <img src="<%= product.path; %>" style="width: 150px; height: 100px;"
                                                    alt="">
                                            </td>
                                            <td>
                                                <h5><%= product.title; %></h5>
                                            </td>
                                            <td>$
                                                <span id="productPrice_<%= product.id;%>">
                                                <%= product.price; %>
                                                </span>/-</td>
                                            <td>
                                                <input type="number" id="productQty_<%= product.id;%>" name="quantity" min="1" max="100" value="1"
                                                    class="form-control" onchange="return updateGrandTotal('<%= product.id; %>')" />
                                            </td>
                                            <td> 
                                                <span class="productTotalAmt" id="productTotal_<%= product.id; %>">
                                                <%= product.price; %>
                                                </span> </td>
                                            <td>
                                                <a href="/remove-item/<%= product.id;%>" class="btn btn-danger ">Remove Item</a>
                                            </td>
                                        </tr>
                                        <input type="hidden" name="productIds" value="<%= product.id; %>">
                                        <% } %>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="5" align="right">Grand Total</td>
                                        <td colspan="2"><span id="grandTotal"><%= grandtotal; %></span></td>
                                    </tr>

                                </tfoot>
                            </table>
                            <div align="right">
                                <button type="submit" class="btn btn-primary">Proceed to check out</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function updateGrandTotal(productId) {
        console.log("productId", productId);
        const productPrice = parseInt($('#productPrice_' + productId).html());
        const productQty = parseInt($('#productQty_' + productId).val());

        console.log("productPrice", productPrice);
        console.log("productQty", productQty);
        let total = productPrice * productQty;
        $('#productTotal_' + productId).html(total);
        console.log("total", total);
        let grandTotal = 0;
        $('.productTotalAmt').each(function () {
            let singleItemTotal = parseInt($(this).html());
            grandTotal = grandTotal + singleItemTotal;
        });
        console.log("grandTotal", grandTotal);
        $('#grandTotal').html(grandTotal);
    }
</script>